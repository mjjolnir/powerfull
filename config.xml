<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.jokermedya.powerfull"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Powerfull Club</name>

    <description>
        Powerfull Club App
    </description>

    <author href="http://jokermedya.com" email="support@jokermedya.com">
        Jokermedya Dev Team 
    </author>

    <access origin="*" />
    
    
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
	<preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root" />

    <gap:splash src="splash.png" />
    
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="com.teamnemitoff.phonedialer" version="0.3.0" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="com.simonmacdonald.telephonenumber" version="1.0.0" />
</widget>
